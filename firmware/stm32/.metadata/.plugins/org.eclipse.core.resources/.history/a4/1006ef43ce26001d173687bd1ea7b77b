#ifndef INC_FIFO_H_
#define INC_FIFO_H_

#include <stdint.h>

typedef struct {
	uint8_t *buffer;
	uint32_t size;
	uint32_t start, end;
} FIFO;

void FIFO_init(FIFO* fifo, uint8_t* array, uint32_t size_in_bytes);
static inline void FIFO_set(FIFO* fifo, uint32_t place, uint8_t bit);

#endif /* INC_FIFO_H_ */
